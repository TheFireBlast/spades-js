{
  "name": "spades-js",
  "version": "0.1.0",
  "description": "An Ace Of Spades server implementation in nodejs",
  "main": "src/index.ts",
  "scripts": {
    "build:swc": "swc src -d dist -s",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "tsc",
    "test:ts": "tsc --noEmit",
    "test:mocha": "mocha",
    "test": "pnpm run \"/^test:.*/\"",
    "format": "prettier --write .",
    "swc-node": "node -r @swc-node/register",
    "dev": "node -r @swc-node/register src/index.ts"
  },
  "keywords": [
    "aos",
    "ace-of-spades",
    "openspades",
    "server",
    "game"
  ],
  "author": "FireBlast",
  "license": "MIT",
  "devDependencies": {
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/pako": "^2.0.3",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "enet": "^0.2.9",
    "pako": "^2.1.0"
  }
}
