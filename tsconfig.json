{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["es2021"],
        "target": "es2020",
        "module": "commonjs",
        "inlineSourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["src/custom_types", "node_modules/@types"]
    },
    "include": ["src/**/*", "test/**/*"]
}
